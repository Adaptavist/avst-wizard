---
:backends:
  - yaml
  - eyaml

:hierarchy:
  - "%{::product_type}/%{::hostname}"
  - "%{::product_type}/%{::version}/default"
  - "%{::product_type}/default"

:logger: noop

:yaml:
  :datadir: <%=avst_wizard_base%>/config/hiera

:eyaml:
  :datadir: <%=avst_wizard_base%>/config/hiera
  :pkcs7_private_key: config/keys/private_key.pkcs7.pem
  :pkcs7_public_key:  config/keys/public_key.pkcs7.pem
